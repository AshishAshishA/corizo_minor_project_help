<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <title>User Management</title>
</head>
<body>
  <h1>User Management</h1>

  <!-- Form to Add and Edit Users -->
  <div style="margin:50px,500px; border:2px; background-color:#f5f5f5; padding:5px" class="mb-3">
  <h2><%= editing ? 'Edit User' : 'Add User' %></h2>
   <form action="<%= editing ? '/edit/' + user._id : '/add' %>" method="POST">
    <label for="name" class="form-label">Name:</label>
    <input type="text" id="name" name="name" value="<%= editing ? user.name : '' %>" required><br><br>
    <label for="email" class="form-label">Email:</label>
    <input type="email" id="email" name="email" value="<%= editing ? user.email : '' %>" required><br><br>
    <label for="phone" class="form-label">Phone:</label>
    <input type="tel" id="phone" name="phone" value="<%= editing ? user.phone : '' %>" required><br><br>
    <button type="submit"><%= editing ? 'Update User' : 'Add User' %></button>
   </form>
  </div>

  <!-- Display Users -->
  <h2>Users</h2>
  <table border="1" class="table table-striped-columns>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(function(user) { %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.phone %></td>
          <td>
            <a href="/edit/<%= user._id %>">Edit</a>
            <a href="/delete/<%= user._id %>">Delete</a>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>

  <!-- JavaScript to handle edit functionality -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous">
	const editing = false;
  </script>
</body>
</html>
